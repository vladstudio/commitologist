{
  "name": "commitologist-monorepo",
  "description": "Generate intelligent commit messages using AI - Monorepo",
  "version": "0.1.9",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vladstudio/commitologist.git"
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:core": "bun run --filter @commitologist/core build",
    "build:vscode": "bun run --filter commitologist build",
    "build:cli": "bun run --filter @commitologist/cli build",
    "watch": "bun run --filter '*' watch",
    "clean": "bun run --filter '*' clean",
    "dev": "bun run watch",
    "test": "bun run --filter '*' test",
    "lint": "biome check packages/*/src || true",
    "lint:fix": "biome check --fix packages/*/src || true", 
    "format": "biome format --write packages/*/src || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3"
  }
}
