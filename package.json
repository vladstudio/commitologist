{
  "name": "commitologist-monorepo",
  "description": "Generate intelligent commit messages using AI - Monorepo",
  "version": "0.1.10",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vladstudio/commitologist.git"
  },
  "scripts": {
    "build": "bun run build:core && sleep 1 && bun run build:vscode && bun run build:cli",
    "build:core": "cd packages/core && bun run build",
    "build:vscode": "cd packages/vscode && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "watch": "bun --filter '*' watch",
    "clean": "bun --filter '*' clean",
    "dev": "bun run watch",
    "test": "bun --filter '*' test",
    "lint": "biome check packages/*/src || true",
    "lint:fix": "biome check --fix packages/*/src || true",
    "format": "biome format --write packages/*/src || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3"
  }
}