{
  "name": "commitologist",
  "version": "0.1.0",
  "description": "A tool that helps you write better commit messages using AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "bun run build:watch",
    "test": "bun test",
    "lint": "biome check src",
    "lint:fix": "biome check --fix src",
    "format": "biome format --write src"
  },
  "keywords": [
    "commit",
    "git",
    "ai",
    "typescript",
    "vscode",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.14",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "commander": "^14.0.0"
  }
}