{
  "name": "commitologist",
  "version": "0.1.0",
  "description": "A tool that helps you write better commit messages using AI",
  "main": "dist/index.js",
  "bin": {
    "commitologist": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "bun run build:watch",
    "test": "bun test",
    "lint": "biome check src",
    "lint:fix": "biome check --fix src",
    "format": "biome format --write src",
    "build:extension": "cd src/extension && tsc",
    "watch:extension": "cd src/extension && tsc --watch"
  },
  "keywords": [
    "commit",
    "git",
    "ai",
    "typescript",
    "vscode",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.14",
    "@types/vscode": "^1.102.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "commander": "^14.0.0"
  },
  "extensionDependencies": [
    "vscode.git"
  ]
}